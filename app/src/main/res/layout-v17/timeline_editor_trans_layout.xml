<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editor_thumbnail_trans_root_layout"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/editor_thumbnail_trans_view_parent"
        android:layout_width="@dimen/editor_timeline_trans_height"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/ic_transition_bg">

        <ImageView
            android:id="@+id/editor_thumbnail_trans_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp10"
            android:layout_centerInParent="true"
            android:layout_marginLeft="4.0dip"
            android:layout_marginRight="4.0dip"
            android:scaleType="center" />
    </RelativeLayout>
</RelativeLayout>