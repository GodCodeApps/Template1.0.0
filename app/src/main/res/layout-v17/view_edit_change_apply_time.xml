<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_start_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="0.1s"
        android:textColor="@color/white_8"
        android:textSize="10.0sp" />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp16p5"
        android:layout_marginRight="@dimen/dp16p5"
        android:layout_toStartOf="@id/end_text"
        android:layout_toEndOf="@id/start_text"
        android:maxHeight="@dimen/dp2"
        android:paddingTop="@dimen/dp3"
        android:paddingBottom="@dimen/dp3"
        android:progressDrawable="@drawable/edit_seek_bar"
        android:thumb="@drawable/edit_seek_bar_ball"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/tv_current_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="1.0s"
        android:textColor="@color/white_8"
        android:textSize="10.0sp" />
</RelativeLayout>