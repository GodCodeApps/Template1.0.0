<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp64"
    android:layout_height="@dimen/dp64"
    android:background="@drawable/asset_effect_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_more"
        android:layout_width="@dimen/dp64"
        android:layout_height="@dimen/dp64"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp14"
            android:background="@mipmap/ic_more" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp17"
            android:layout_alignParentBottom="true"
            android:background="@color/text_bg_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/more"
                android:textColor="@color/white_8"
                android:textSize="@dimen/sp10" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_add"
        android:layout_width="@dimen/dp64"
        android:layout_height="@dimen/dp64"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp14"
            android:background="@mipmap/ic_add" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp17"
            android:layout_alignParentBottom="true"
            android:background="@color/text_bg_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/add"
                android:textColor="@color/white_8"
                android:textSize="@dimen/sp10" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_effect"
        android:layout_width="@dimen/dp52"
        android:layout_height="@dimen/dp52"
        android:layout_centerInParent="true"
        android:scaleType="fitXY" />
</RelativeLayout>