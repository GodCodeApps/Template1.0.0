<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_main"
    android:layout_width="220.0dip"
    android:layout_height="147.0dip"
    android:background="@drawable/draft_dialog_bg">

    <View
        android:layout_width="220.0dip"
        android:layout_height="1.0dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="@dimen/dp27"
        android:layout_height="@dimen/dp27"
        android:padding="@dimen/dp6"
        android:src="@mipmap/ic_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:text="@string/draft_input_draft_name"
        android:textColor="@color/white_8"
        android:textSize="@dimen/sp14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_draft_name"
        android:layout_width="190.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp19"
        android:text="@string/draft_delete_confirm"
        android:textColor="@color/white_8"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:textSize="@dimen/sp12"
        android:theme="@style/DialogEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hint" />

    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="190.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp20"
        android:minHeight="@dimen/dp27"
        android:text="@string/draft_confirm"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_draft_name" />
</androidx.constraintlayout.widget.ConstraintLayout>