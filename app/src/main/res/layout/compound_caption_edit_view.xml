<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@+id/rl_top_menu" android:background="@color/black" android:layout_width="fill_parent" android:layout_height="@dimen/dp261">
        <EditText android:textSize="@dimen/sp16" android:textColor="@color/white_8" android:id="@+id/et_caption_input" android:background="@drawable/editor_caption_input_corner" android:paddingLeft="@dimen/dp5" android:paddingRight="@dimen/dp5" android:layout_width="fill_parent" android:layout_height="@dimen/dp35" android:layout_marginLeft="@dimen/dp13" android:layout_marginTop="@dimen/dp15" android:layout_marginRight="@dimen/dp13" android:textCursorDrawable="@drawable/editor_caption_input_cursor" />
        <RelativeLayout android:id="@+id/rl_menu_container" android:layout_width="fill_parent" android:layout_height="@dimen/dp44" android:layout_below="@id/et_caption_input">
            <ImageView android:id="@+id/iv_cancel" android:layout_width="@dimen/dp16" android:layout_height="@dimen/dp16" android:layout_marginLeft="@dimen/dp15" android:src="@mipmap/ic_cancel" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
            <TextView android:textSize="@dimen/sp14" android:textColor="@color/white_8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp24" android:text="@string/compound_caption_title_style" android:layout_toRightOf="@id/iv_cancel" android:layout_centerVertical="true" />
            <ImageView android:id="@+id/iv_confirm" android:layout_width="@dimen/dp25" android:layout_height="@dimen/dp25" android:layout_marginRight="@dimen/dp15" android:src="@mipmap/ic_record_confirm" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
        </RelativeLayout>
        <View android:id="@+id/menu_divide" android:background="@color/menu_divide_color" android:layout_width="fill_parent" android:layout_height="@dimen/dp0p2" android:layout_below="@id/rl_menu_container" />
        <RelativeLayout android:id="@+id/rl_font_and_color_container" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/menu_divide">
            <com.meishe.myvideo.view.MYMultiColorView android:id="@+id/multi_color_view" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp12" android:layout_marginTop="@dimen/dp18" />
            <View android:id="@+id/menu_divide_bottom" android:background="@color/menu_divide_color" android:layout_width="fill_parent" android:layout_height="@dimen/dp0p2" android:layout_marginTop="@dimen/dp18" android:layout_below="@id/multi_color_view" />
            <HorizontalScrollView android:id="@+id/hv_font" android:layout_width="fill_parent" android:layout_height="@dimen/dp120" android:layout_marginTop="@dimen/dp18" android:layout_below="@id/menu_divide_bottom">
                <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/dp53" android:layout_marginLeft="@dimen/dp12" android:layout_marginRight="@dimen/dp12">
                    <RelativeLayout android:orientation="vertical" android:id="@+id/rl_font_default" android:background="@drawable/caption_font_default_bg" android:layout_width="@dimen/dp85" android:layout_height="@dimen/dp53">
                        <TextView android:textSize="@dimen/sp12" android:textColor="@color/white_8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dp5" android:text="默认" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" />
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/rl_font_fang_jian_ti" android:background="@drawable/caption_font_default_bg" android:layout_width="@dimen/dp85" android:layout_height="@dimen/dp53" android:layout_marginLeft="@dimen/dp5">
                        <TextView android:textSize="@dimen/sp12" android:textColor="@color/white_8" android:id="@+id/tv_font_fang_jian_ti" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="方正仿宋简体" android:layout_centerInParent="true" />
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/rl_font_shu_jian_ti" android:background="@drawable/caption_font_default_bg" android:layout_width="@dimen/dp85" android:layout_height="@dimen/dp53" android:layout_marginLeft="@dimen/dp5">
                        <TextView android:textSize="@dimen/sp12" android:textColor="@color/white_8" android:id="@+id/tv_font_shu_jian_ti" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="方正书宋简体" android:layout_centerInParent="true" />
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/rl_font_zhu_shi_ti" android:background="@drawable/caption_font_default_bg" android:layout_width="@dimen/dp85" android:layout_height="@dimen/dp53" android:layout_marginLeft="@dimen/dp5">
                        <TextView android:textSize="@dimen/sp12" android:textColor="@color/white_8" android:id="@+id/tv_font_zhu_shi_ti" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="杨任东竹石体" android:layout_centerInParent="true" />
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/rl_font_wen_yi_ti" android:background="@drawable/caption_font_default_bg" android:layout_width="@dimen/dp85" android:layout_height="@dimen/dp53" android:layout_marginLeft="@dimen/dp5">
                        <TextView android:textSize="@dimen/sp12" android:textColor="@color/white_8" android:id="@+id/tv_font_wen_yi_ti" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="站酷文艺体" android:layout_centerInParent="true" />
                    </RelativeLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>