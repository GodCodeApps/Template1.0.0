<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <HorizontalScrollView android:layout_width="fill_parent" android:layout_height="@dimen/dp53" android:layout_marginTop="@dimen/dp18" android:layout_below="@id/menu_divide_bottom">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/dp53" android:layout_marginLeft="@dimen/dp12" android:layout_marginRight="@dimen/dp12">
            <RelativeLayout android:orientation="vertical" android:id="@+id/rl_font_default" android:background="@drawable/caption_font_default_bg" android:layout_width="@dimen/dp85" android:layout_height="fill_parent">
                <TextView android:textSize="@dimen/sp12" android:textColor="@color/white_8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dp5" android:text="默认" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rl_font_fang_jian_ti" android:background="@drawable/caption_font_default_bg" android:layout_width="@dimen/dp85" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/dp5">
                <TextView android:textSize="@dimen/sp12" android:textColor="@color/white_8" android:id="@+id/tv_font_fang_jian_ti" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="方正仿宋简体" android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rl_font_shu_jian_ti" android:background="@drawable/caption_font_default_bg" android:layout_width="@dimen/dp85" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/dp5">
                <TextView android:textSize="@dimen/sp12" android:textColor="@color/white_8" android:id="@+id/tv_font_shu_jian_ti" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="方正书宋简体" android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rl_font_zhu_shi_ti" android:background="@drawable/caption_font_default_bg" android:layout_width="@dimen/dp85" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/dp5">
                <TextView android:textSize="@dimen/sp12" android:textColor="@color/white_8" android:id="@+id/tv_font_zhu_shi_ti" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="杨任东竹石体" android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rl_font_wen_yi_ti" android:background="@drawable/caption_font_default_bg" android:layout_width="@dimen/dp85" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/dp5">
                <TextView android:textSize="@dimen/sp12" android:textColor="@color/white_8" android:id="@+id/tv_font_wen_yi_ti" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="站酷文艺体" android:layout_centerInParent="true" />
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/dp25" android:layout_marginLeft="@dimen/dp12" android:layout_marginTop="@dimen/dp20">
        <TextView android:textSize="@dimen/sp10" android:textColor="@color/white_8" android:gravity="center" android:id="@+id/tv_font_bold" android:background="@drawable/caption_bold_bg" android:layout_width="@dimen/dp56" android:layout_height="@dimen/dp25" android:text="@string/caption_font_bold" />
        <TextView android:textSize="@dimen/sp10" android:textColor="@color/white_8" android:gravity="center" android:id="@+id/tv_font_italics" android:background="@drawable/caption_bold_bg" android:layout_width="@dimen/dp56" android:layout_height="@dimen/dp25" android:layout_marginLeft="@dimen/dp12" android:text="@string/font_italics" />
        <TextView android:textSize="@dimen/sp10" android:textColor="@color/white_8" android:gravity="center" android:id="@+id/tv_font_shadow" android:background="@drawable/caption_bold_bg" android:layout_width="@dimen/dp56" android:layout_height="@dimen/dp25" android:layout_marginLeft="@dimen/dp12" android:text="@string/font_shadow" />
    </LinearLayout>
    <include layout="@layout/caption_apply_to_all" />
</LinearLayout>