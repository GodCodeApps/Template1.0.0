<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp53"
        android:visibility="gone"
        android:layout_below="@id/menu_divide_bottom"
        android:layout_marginTop="@dimen/dp18">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp53"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_font_default"
                android:layout_width="@dimen/dp85"
                android:layout_height="fill_parent"
                android:background="@drawable/caption_font_default_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp5"
                    android:text="默认"
                    android:textColor="@color/white_8"
                    android:textSize="@dimen/sp12" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_font_fang_jian_ti"
                android:layout_width="@dimen/dp85"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dp5"
                android:background="@drawable/caption_font_default_bg">

                <TextView
                    android:id="@+id/tv_font_fang_jian_ti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="方正仿宋简体"
                    android:textColor="@color/white_8"
                    android:textSize="@dimen/sp12" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_font_shu_jian_ti"
                android:layout_width="@dimen/dp85"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dp5"
                android:background="@drawable/caption_font_default_bg">

                <TextView
                    android:id="@+id/tv_font_shu_jian_ti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="方正书宋简体"
                    android:textColor="@color/white_8"
                    android:textSize="@dimen/sp12" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_font_zhu_shi_ti"
                android:layout_width="@dimen/dp85"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dp5"
                android:background="@drawable/caption_font_default_bg">

                <TextView
                    android:id="@+id/tv_font_zhu_shi_ti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="杨任东竹石体"
                    android:textColor="@color/white_8"
                    android:textSize="@dimen/sp12" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_font_wen_yi_ti"
                android:layout_width="@dimen/dp85"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dp5"
                android:background="@drawable/caption_font_default_bg">

                <TextView
                    android:id="@+id/tv_font_wen_yi_ti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="站酷文艺体"
                    android:textColor="@color/white_8"
                    android:textSize="@dimen/sp12" />
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp25"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_font_bold"
            android:layout_width="@dimen/dp56"
            android:layout_height="@dimen/dp25"
            android:background="@drawable/caption_bold_bg"
            android:gravity="center"
            android:text="@string/caption_font_bold"
            android:textColor="@color/white_8"
            android:textSize="@dimen/sp10" />

        <TextView
            android:id="@+id/tv_font_italics"
            android:layout_width="@dimen/dp56"
            android:layout_height="@dimen/dp25"
            android:layout_marginLeft="@dimen/dp12"
            android:background="@drawable/caption_bold_bg"
            android:gravity="center"
            android:text="@string/font_italics"
            android:textColor="@color/white_8"
            android:textSize="@dimen/sp10" />

        <TextView
            android:id="@+id/tv_font_shadow"
            android:layout_width="@dimen/dp56"
            android:layout_height="@dimen/dp25"
            android:layout_marginLeft="@dimen/dp12"
            android:background="@drawable/caption_bold_bg"
            android:gravity="center"
            android:text="@string/font_shadow"
            android:textColor="@color/white_8"
            android:textSize="@dimen/sp10" />
    </LinearLayout>

    <include layout="@layout/caption_apply_to_all" />
</LinearLayout>