<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="53.5dip"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentBottom="true">

        <CheckBox
            android:id="@+id/icon"
            android:layout_width="@dimen/menu_item_image_width"
            android:layout_height="@dimen/menu_item_image_height"
            android:layout_centerHorizontal="true"
            android:button="@null" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/menu_item_text_margin_top"
            android:textColor="@color/white_8"
            android:textSize="@dimen/menu_item_text_size" />
    </RelativeLayout>
</RelativeLayout>