    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_bottom_confirm" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="@dimen/dp36" android:layout_below="@id/rl_top_menu">
        <View android:background="@color/menu_divide_color" android:layout_width="fill_parent" android:layout_height="@dimen/dp0p2" android:layout_alignParentTop="true" />
        <TextView android:textSize="@dimen/sp12" android:textColor="@color/white_8" android:id="@+id/tv_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="贴纸" android:layout_centerInParent="true" />
        <ImageView android:id="@+id/iv_bottom_confirm" android:background="@mipmap/ic_confirm" android:layout_width="@dimen/dp23" android:layout_height="@dimen/dp23" android:layout_marginRight="@dimen/dp13" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
    </RelativeLayout>
</LinearLayout>