<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/caption_apply_to_all"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/alignLeft"
                android:layout_width="@dimen/dp59"
                android:layout_height="@dimen/dp25"
                android:background="@mipmap/caption_position_left" />

            <ImageView
                android:id="@+id/alignCenterHorizontal"
                android:layout_width="@dimen/dp59"
                android:layout_height="@dimen/dp25"
                android:layout_marginLeft="@dimen/dp60"
                android:background="@mipmap/caption_position_h_center" />

            <ImageView
                android:id="@+id/alignRight"
                android:layout_width="@dimen/dp59"
                android:layout_height="@dimen/dp25"
                android:layout_marginLeft="@dimen/dp60"
                android:background="@mipmap/caption_position_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/alignTop"
                android:layout_width="@dimen/dp59"
                android:layout_height="@dimen/dp25"
                android:background="@mipmap/caption_position_top" />

            <ImageView
                android:id="@+id/alignCenterVertical"
                android:layout_width="@dimen/dp59"
                android:layout_height="@dimen/dp25"
                android:layout_marginLeft="@dimen/dp60"
                android:background="@mipmap/caption_position_v_center" />

            <ImageView
                android:id="@+id/alignBottom"
                android:layout_width="@dimen/dp59"
                android:layout_height="@dimen/dp25"
                android:layout_marginLeft="@dimen/dp60"
                android:background="@mipmap/caption_position_bottom" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/caption_apply_to_all"
        android:layout_width="fill_parent"
        android:layout_height="38.0dip"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <include layout="@layout/caption_apply_to_all" />
    </LinearLayout>
</RelativeLayout>