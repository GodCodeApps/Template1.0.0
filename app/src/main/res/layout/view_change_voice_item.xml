<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="@dimen/edit_change_voice_item_size"
        android:layout_height="@dimen/edit_change_voice_image_height"
        android:background="@drawable/shape_corn_half_corners_up">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dp31"
            android:layout_height="@dimen/dp31"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/edit_change_voice_item_size"
        android:layout_height="@dimen/edit_change_voice_item_text_layout_height"
        android:layout_below="@id/image_layout"
        android:background="@drawable/shape_corn_half_corners_bottom">

        <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white_8"
            android:textSize="@dimen/edit_change_voice_item_text_size" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image_cover"
        android:layout_width="@dimen/edit_change_voice_item_size"
        android:layout_height="@dimen/edit_change_voice_item_size"
        android:background="@mipmap/bg_recouse_select" />
</RelativeLayout>