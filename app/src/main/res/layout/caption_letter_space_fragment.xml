<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/caption_apply_to_all"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp36"
        android:layout_marginRight="@dimen/dp36"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/tv_letter_space_standard"
                android:layout_width="@dimen/dp61"
                android:layout_height="@dimen/dp27"
                android:layout_centerInParent="true"
                android:background="@drawable/caption_bold_bg"
                android:gravity="center"
                android:text="@string/letter_space_standard"
                android:textColor="@color/white_8"
                android:textSize="@dimen/sp10" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/tv_letter_space_more"
                android:layout_width="@dimen/dp61"
                android:layout_height="@dimen/dp27"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp12"
                android:background="@drawable/caption_bold_bg"
                android:gravity="center"
                android:text="@string/letter_space_more"
                android:textColor="@color/white_8"
                android:textSize="@dimen/sp10" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/tv_letter_space_big"
                android:layout_width="@dimen/dp61"
                android:layout_height="@dimen/dp27"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp12"
                android:background="@drawable/caption_bold_bg"
                android:gravity="center"
                android:text="@string/letter_space_big"
                android:textColor="@color/white_8"
                android:textSize="@dimen/sp10" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/caption_apply_to_all"
        android:layout_width="fill_parent"
        android:layout_height="38.0dip"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <include layout="@layout/caption_apply_to_all" />
    </LinearLayout>
</RelativeLayout>