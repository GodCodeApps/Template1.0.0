<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/material_select_bg">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <com.meishe.myvideo.view.CustomTitleBar
            android:id="@+id/title_bar"
            android:layout_width="fill_parent"
            android:layout_height="64.0dip"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/single_contain"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/tv_single_start"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/dp15"
            android:background="@color/start_edit_bg"
            android:gravity="center"
            android:text="@string/start_marking"
            android:textColor="@color/start_edit_text"
            android:textSize="16.0sp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/albumTipsText"
        android:layout_width="100.0dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="39.0dip"
        android:layout_marginRight="10.0dip"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@color/white_8"
        android:textSize="8.0sp"
        android:visibility="gone" />
</RelativeLayout>